@model Asp_MongoDB.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- .breadcumb-area start -->
<div class="breadcumb-area bg-img-1 black-opacity ptb-50">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcumb-wrap text-center">
                    <h2>Detail Book</h2>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>

                        <li><span>Detail Book</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- .breadcumb-area end -->
<!-- single-product-area start-->
<div class="single-product-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="product-single-img">
                    <div class="product-active ">
                        <div class="item">
                            <img src="~/images/books/@Model.Image" alt=" @Model.BookName">
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="product-single-content">
                    <h2>@Model.BookName</h2>
                    <div class="rating-wrap fix">
                        <span class="pull-left">
                            <div class="price">
                                <span class="new-price"> @string.Format("{0:C0}", Model.Price)</span>
                            </div>
                        </span>
                    </div>
                    <form asp-controller="Cart" asp-action="AddCart" asp-route-id="@Model.BookId">
                        <ul class="input-style">
                            <li class=" ">
                                <div class="number-input">
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" class="minus" type="button">
                                        <i class="fa fa-minus" aria-hidden="true"></i>
                                    </button>
                                    <input class="quantity" id="quantity" min="1" max="@Model.Quantity" name="qty" value="1" type="number" >
                                    <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus" type="button">
                                        <i class="fa fa-plus" aria-hidden="true"></i>
                                    </button>
                                </div>
                            </li>
                            <li class="text-white"><button type="submit" class="btn ">Add Cart</button></li>
                        </ul>
                    </form>
                    <ul class="cetagory">
                        <li style="font-size: 16px;">Author :<span style="padding-left: 5px;">@Model.Author</span> </li>
                    </ul>
                    <ul class="cetagory">
                        <li style="font-size: 16px;">Category :<span style="padding-left: 5px;">@Model.CategoryName</span> </li>
                    </ul>
                    <ul class="cetagory">
                        <li style="font-size: 16px;">Quantity :<span style="padding-left: 5px;">@Model.Quantity</span> </li>
                    </ul>

                </div>
            </div>
        </div>
        <div class="row mt-60">
            <div class="col-12">
                <div class="single-product-menu">
                    <ul class="nav">
                        <li><a class="active" data-toggle="tab" href="#description">Description</a> </li>
                    </ul>
                </div>
            </div>
            <div class="col-12">
                <div class="tab-content">
                    <div class="tab-pane active" id="description">
                        <div class="description-wrap" [innerHtml]="@Model.Description">
                            @Html.Raw(@Model.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- single-product-area end-->
<!-- featured-product-area start -->
<div class="featured-product-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2>Related Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewData["RelatedBook"] as IEnumerable<Book>)
            {
                <div class="col-lg-3 col-sm-6 col-12">
                    <div class="product-wrap">
                        <a asp-action="Details" asp-route-id="@item.BookId" asp-controller="Books">
                            <div class="product-img">

                                <img src="~/images/books/@item.Image" alt=" @item.BookName">

                            </div>
                        </a>
                        <ul class="icon">
                            <li>
                                <a (click)="!bk.status?err(bk.name): addToCart(bk.id)"><i class="fa fa-shopping-cart"></i></a>
                                <span>Add Cart</span>
                            </li>
                            <li>
                                <a asp-action="Details" asp-route-id="@item.BookId" asp-controller="Books"><i class="fa fa-eye"></i></a>
                                <span>Detail</span>
                            </li>
                        </ul>
                        <div class="product-content fix">
                            <h3><a asp-action="Details" asp-route-id="@item.BookId" asp-controller="Books" class="text-uppercase">@item.BookName</a></h3>
                            <span class="pull-left">
                                <div class="price">
                                    <span class="new-price"> @string.Format("{0:C0}", item.Price)</span>
                                </div>
                            </span>

                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
